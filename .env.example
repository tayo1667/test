# Database (MySQL)
# Option 1: Connection URL
DATABASE_URL=mysql://user:password@host:3306/sentriom
# Option 2: Separate env vars
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=
# MYSQL_DATABASE=sentriom

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server
PORT=3000
NODE_ENV=production

# Email (Resend) - OTP and notifications. Get API key: https://resend.com/api-keys
# Without RESEND_API_KEY, OTP is logged to console in dev and API still returns success.
RESEND_API_KEY=re_your_resend_api_key
# Use email@yourdomain.com (domain must be verified in Resend). If unset or invalid, uses onboarding@resend.dev.
FROM_EMAIL=admin@sentriom.com

# Admin (optional; defaults to admin123)
ADMIN_PASSWORD=your-admin-password

# Korapay (Optional)
KORAPAY_SECRET_KEY=your-korapay-secret-key
KORAPAY_PUBLIC_KEY=your-korapay-public-key
